{% extends 'base.html.twig' %}

{% block title %}Constructeur{% endblock %}

{% block body %}
    <h1 class="text-center">Constructeur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ constructeur.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ constructeur.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ constructeur.country }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ constructeur.site }}</td>
            </tr>
        </tbody>
    </table>

    <a role="button" aria-pressed="true" class="btn btn-primary" href="{{ path('app_constructeur_index') }}">Accueil</a>

    <a role="button" aria-pressed="true" class="btn btn-warning" href="{{ path('app_constructeur_edit', {'id': constructeur.id}) }}">Modifier</a>

    {{ include('constructeur/_delete_form.html.twig') }}
{% endblock %}
