{% extends 'base.html.twig' %}

{% block title %}Liste des voitures{% endblock %}

{% block body %}
    <h1>Liste des voitures</h1>

    <h2 class="mt-5 mb-2">Filtrer par Constructeur</h2>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button type="submit" class="btn btn-primary">Filtrer</button>
        {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Length</th>
                <th>Width</th>
                <th>Weight</th>
                <th>Seat</th>
                <th>Energy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.model }}</td>
                <td>{{ voiture.length }}</td>
                <td>{{ voiture.width }}</td>
                <td>{{ voiture.weight }}</td>
                <td>{{ voiture.seat }}</td>
                <td>{{ voiture.energy }}</td>
                <td>
                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voiture_new') }}">Create new</a>
{% endblock %}
